<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/image_background"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/logo_app"
            android:layout_gravity="center_horizontal"
            android:layout_margin="70dp"



            />



        <LinearLayout
            android:id="@+id/linear_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <LinearLayout
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_header"
                    android:text="@string/login_activity_title"
                    android:textSize="22dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="16dp"
                    android:layout_margin="16dp"

                    />




            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <!-- INPUT -->
                    <EditText
                        android:textSize="16sp"
                        android:id="@+id/username"
                        android:layout_marginLeft="-10dp"
                        android:layout_toRightOf="@+id/username_icon"
                        android:hint="@string/login_activity_edit_username"
                        android:textColorHint="@color/colorPrimaryLight"
                        android:textColor="@color/colorTextSecondary"
                        android:inputType="text"
                        android:maxLength="16"
                        android:padding="10dp"
                        android:background="@color/colorSecondaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- ICON -->
                    <ImageView
                        android:padding="3dp"
                        android:background="@color/colorSecondaryDark"
                        android:id="@+id/username_icon"
                        android:src="@drawable/person_white_24dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </RelativeLayout>





                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_height="1dp"
                    android:background="@color/colorSecondaryLight" />



                <EditText
                    android:textSize="16dp"
                    android:id="@+id/password"
                    android:drawablePadding="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_activity_edit_password"
                    android:textColorHint="@color/colorPrimaryLight"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_marginLeft="60dp"
                    android:inputType="textPassword"
                    android:background="@color/colorSecondaryDark"
                    android:maxLength="20"

                    android:padding="16dp"
                    android:drawableLeft="@drawable/password"
                    android:layout_marginRight="60dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_height="1dp"
                    android:background="@color/colorSecondaryLight" />
                android:layout_marginBottom="63dp"
                />


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="110dp"
            android:background="@color/colorSecondaryLight"
            android:layout_gravity="bottom"
            android:layout_marginBottom="109dp"
            android:layout_marginLeft="110dp"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Sign in"
        android:textSize="20dp"
        android:textColor="@color/colorTextPrimary"
        android:gravity="center"
        android:padding="13dp"
        android:layout_marginBottom="18dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
