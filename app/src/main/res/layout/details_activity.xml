<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:src="@drawable/cover"
        android:scaleType="centerCrop"
        android:id="@+id/cover_details"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10sp"
        android:layout_marginStart="5sp" />
    <TextView
        android:id="@+id/title_details"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitsugi no Chaika"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:textColor="@color/colorTextSecondary"
        android:layout_alignTop="@+id/cover_details"
        android:layout_toRightOf="@+id/cover_details"
        android:layout_toEndOf="@+id/cover_details" />

    <TextView
        android:id="@+id/sinopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:text="Sinopsis"
        android:textSize="13sp"
        android:layout_below="@+id/title_details"
        android:layout_alignLeft="@+id/title_details"
        />

</RelativeLayout>