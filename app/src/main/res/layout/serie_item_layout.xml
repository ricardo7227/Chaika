<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/colorSecondaryLight"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    >
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/cover"
            android:scaleType="centerCrop"
            android:id="@+id/cover_serie"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="5sp" />
        <TextView
            android:id="@+id/title_series"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hitsugi no Chaika"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="5dp"
            android:textSize="16sp"
            android:textColor="@color/colorTextSecondary"
            android:layout_alignTop="@+id/cover_serie"
            android:layout_toRightOf="@+id/cover_serie"
            android:layout_toEndOf="@+id/cover_serie" />

        <TextView
            android:id="@+id/studio_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="Bones"
            android:textSize="13sp"
            android:layout_below="@+id/title_series"
            android:layout_alignLeft="@+id/title_series"
            />
        <TextView
            android:id="@+id/episodios_vistos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:text="12/12 vistos"
            android:textSize="12sp"
            android:layout_below="@+id/studio_series"
            android:layout_alignLeft="@+id/title_series"
            />
        <TextView
            android:id="@+id/season_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Spring 2014"
            android:textSize="11sp"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:layout_below="@+id/episodios_vistos"
            android:layout_alignLeft="@+id/title_series"
            android:paddingBottom="2dp"
            />
        <TextView
            android:id="@+id/source_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            tools:text="Light Novel"
            android:textSize="11sp"
            android:gravity="bottom"
            android:layout_below="@+id/episodios_vistos"
            android:paddingRight="10dp"
            android:paddingBottom="2dp"
            android:textColor="@color/colorTextPrimaryCyan"

            />




    </RelativeLayout>
</android.support.v7.widget.CardView>